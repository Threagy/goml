# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
max_line_length = 240

[*.go]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.proto]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.{md,txt}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
